<!doctype html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href={{head.css}} rel="stylesheet"/>
    <title>{{title}}</title>
    <!-- Disable search engines -->
    <meta name="robots" content="noindex">
</head>
<body>
<div class="bg-amber-30 grid grid-cols-1">
    <div class="flex justify-center mt-8">
        <h1 class="text-3xl content-center font-bold">
            {{title}}
        </h1>
    </div>
    <div class="flex justify-center italic text-lg">
        {{description}}
    </div>
    <main>
        <div class="ml-10 mt-20">
            <ul class="list-none">
                {{#sections}}
                    <li class="mb-10">
                        <div class="text-lg font-bold">{{ title }}</div>
                        <div class="italic">{{ summary }}</div>
                        <ul class="ml-12 mt-3 list-disc">
                            {{#topics}}
                                <li>{{name}}</li>
                            {{/topics}}
                        </ul>
                    </li>
                {{/sections}}
            </ul>
        </div>
    </main>
    <footer class="italic text-sm flex justify-center mt-8 mb-10">
        <div>Copyright &#169; {{author}} 2025</div>
    </footer>
</div>
</body>
</html>
